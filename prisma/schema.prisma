generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Team {
  id        Int       @id @default(autoincrement())
  name      String
  slots     TeamSlot[]
  createdAt DateTime  @default(now())
}

model TeamSlot {
  id        Int     @id @default(autoincrement())
  team      Team    @relation(fields: [teamId], references: [id])
  teamId    Int
  pokemonId Int
  position  Int

  @@unique([teamId, position])
  @@unique([teamId, pokemonId])
}